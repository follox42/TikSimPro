{
    "trend_analyzer": {
      "name": "TikTokAnalyzer",
      "params": {
        "cache_dir": "tiktok_data",
        "description": "Share it with your friends !",
        "hashtags": ["fyp", "foryou", "viral", "trending", "animation", "simulation", "tiktok"],
        "use_web_search": false
      }
    },
    "video_generator": {
      "name": "CircleSimulator",
      "params": {
        "width": 1080,
        "height": 1920,
        "fps": 60,
        "duration": 25.0,
        "output_path": "output/circle_video.mp4",
        "temp_dir": "temp",
        "frames_dir": "frames",

        "min_radius": 150,
        "gap_radius": 0,
        "nb_rings": 30,
        "thickness": 10,
        "gap_angle": 60,
        "rotation_speed": 20,
        "random_arc": false,
        "start_angle": -30,
        "gap_speed": 1,

        "balls": 2, 
        "text_balls": ["You","Me"], 
        "on_balls_text": true, 
        "max_text_length": 10,
        "all_arc": true,
        "gravity": 500,
        "elasticity": 1.02,

        "use_gpu_acceleration": true,
        "direct_frames": false,
        "performance_mode": "balanced",
        "render_scale": 1.0,
        "debug": false,
        "screen_scale": 0.5,
        "question_text": "Who's the dumbest?"
      }
    },
    "audio_generator": {
      "name": "TrendAudioGenerator",
      "params": {
        "note_volume": 0.5,
        "explosion_volume": 0.01,
        "activation_volume": 0.0,
        "passage_volume": 0.0
      }
    },
    "media_combiner": {
      "name": "FFmpegMediaCombiner",
      "params": {

      }
    },
    "video_enhancer": {
      "name": "VideoEnhancer",
      "params": {
        "add_intro": false,
        "add_hashtags": false,
        "add_cta": true,
        "add_music": true
      }
    },
    "publishers": {
      "tiktok": {
        "name": "TikTokPublisher",
        "params": {
          "auto_close": true,
          "headless": true
        },
        "enabled": true
      },
      "youtube": {
        "name": "YouTubePublisher",
        "params": {
          "auto_close": true,
          "headless": false
        },
        "enabled": true
      },
      "instagram": {
        "name": "InstagramPublisher",
        "params": {
          "auto_close": true,
          "mobile_emulation": true,
          "headless": true
        },
        "enabled": false
      }
    },
    "pipeline": {
      "output_dir": "videos",
      "auto_publish": true,
      "video_dimensions": [1080, 1920],
      "fps": 60
    }
  }