{
    "trend_analyzer": {
      "name": "TikTokAnalyzer",
      "params": {
        "cache_dir": "tiktok_data",
        "description": "Share it with your friends !",
        "hashtags": ["fyp", "foryou", "viral", "trending", "animation", "simulation", "tiktok"],
        "use_web_search": false
      }
    },
    "video_generator": {
      "name": "InfiniteCircleSimulator",
      "params": {
        "width": 1080,
        "height": 1920,
        "fps": 60,
        "duration": 25.0,
        "output_path": "output/circle_video.mp4",
        "temp_dir": "temp",
        "frames_dir": "frames",

        "ring_count": 50,
        "max_passages": 1000,
        "min_radius": 80, 
        "max_radius": 200, 
        "thickness": 15, 
        "gap_angle": 60, 
        "rotation_speed": 60,  
        "shrink_factor": 0.95, 
        "recycling_speed": 200,  
        "spacing": 10, 

        "balls": 1, 
        "text_balls": [], 
        "on_balls_text": true, 
        "max_text_length": 10,

        "question_text": "Who's the best ?",
        "use_gpu_acceleration": true,
        "direct_frames": false,
        "performance_mode": "balanced",
        "render_scale": 1.0,
        "debug": false,
        "screen_scale": 0.5,
        "gravity": 500,
        "elasticity": 1.02
      }
    },
    "audio_generator": {
      "name": "TrendAudioGenerator",
      "params": {
        "note_volume": 0.5,
        "explosion_volume": 0.01,
        "activation_volume": 0.0,
        "passage_volume": 0.0
      }
    },
    "media_combiner": {
      "name": "FFmpegMediaCombiner",
      "params": {

      }
    },
    "video_enhancer": {
      "name": "VideoEnhancer",
      "params": {
        "add_intro": false,
        "add_hashtags": false,
        "add_cta": true,
        "add_music": true
      }
    },
    "publishers": {
      "tiktok": {
        "name": "TikTokPublisher",
        "params": {
          "auto_close": true,
          "headless": true
        },
        "enabled": false
      },
      "youtube": {
        "name": "YouTubePublisher",
        "params": {
          "auto_close": true,
          "headless": false
        },
        "enabled": false
      },
      "instagram": {
        "name": "InstagramPublisher",
        "params": {
          "auto_close": true,
          "mobile_emulation": true,
          "headless": true
        },
        "enabled": false
      }
    },
    "pipeline": {
      "output_dir": "videos",
      "auto_publish": true,
      "video_dimensions": [1080, 1920],
      "fps": 60
    }
  }