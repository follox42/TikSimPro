{
    "trend_analyzer": {
      "name": "TikTokAnalyzer",
      "params": {
        "cache_dir": "tiktok_data",
        "description": "Share it with your friends !",
        "hashtags": ["bounce", "simulation", "satisfy", "satisfying", "#animation"],
        "use_web_search": false
      }
    },
    "video_generator": {
      "name": "InfiniteCircleSimulator",
      "params": {
        "width": 1080,
        "height": 1920,
        "fps": 60,
        "duration": 25.0,
        "output_path": "output/circle_video.mp4",
        "temp_dir": "temp",
        "frames_dir": "frames",

        "min_radius": 100, 
        "gap_radius": 0, 
        "nb_rings": 50, 
        "thickness": 15, 
        "gap_angle": 60, 
        "rotation_speed": 60, 
        "random_arc": false, 
        "color_palette": [
                     "#FF0050", "#00F2EA", "#FFFFFF", "#FE2C55", "#25F4EE",
                     "#FFD700", "#FF6B35", "#32CD32", "#FF69B4", "#00CED1",
                     "#FFA500", "#9370DB", "#00FF7F", "#FF1493", "#1E90FF"
                 ],

        "balls": 1, 
        "text_balls": null, 
        "on_balls_text": true, 
        "max_text_length": 15,
        
        "question_text": "Can the ball escape 2000 circles?",
        "top_frac_text": 0.15,
        "left_frac_text": 0.5,

        "max_circles_to_escape": 2000,
        "show_countdown": true, 
        "countdown_color":"#FFFFFF",
        "victory_on_escape": true, 

        "use_gpu_acceleration": true,
        "direct_frames": false,
        "performance_mode": "balanced",
        "render_scale": 1.0,
        "all_arc": true,  
        "alternate_rotation": false,
        "debug": false, 
        "screen_scale": 0.5,

        "start_angle": 30,
        "gap_angle_rings": 1,
        "gap_speed": 0,
        "gravity": 400,
        "elasticity": 1.001,
        
        "shrink_speed": 50,  
        "maintain_ring_count": true,  
        "shrink_factor": 0.85,

        "max_particles_per_ring": 80, 
        "max_particles_per_ball": 20,  
        "performance_mode_auto": true,

        "max_total_rings": 300
      }
    },
    "audio_generator": {
      "name": "TrendAudioGenerator",
      "params": {
        "note_volume": 0.5,
        "explosion_volume": 0.01,
        "activation_volume": 0.0,
        "passage_volume": 0.0
      }
    },
    "media_combiner": {
      "name": "FFmpegMediaCombiner",
      "params": {

      }
    },
    "video_enhancer": {
      "name": "VideoEnhancer",
      "params": {
        "add_intro": false,
        "add_hashtags": false,
        "add_cta": true,
        "add_music": true
      }
    },
    "publishers": {
      "tiktok": {
        "name": "TikTokPublisher",
        "params": {
          "auto_close": true,
          "headless": true
        },
        "enabled": true
      },
      "youtube": {
        "name": "YouTubePublisher",
        "params": {
          "auto_close": true,
          "headless": false
        },
        "enabled": true
      },
      "instagram": {
        "name": "InstagramPublisher",
        "params": {
          "auto_close": true,
          "mobile_emulation": true,
          "headless": true
        },
        "enabled": false
      }
    },
    "pipeline": {
      "output_dir": "videos",
      "auto_publish": true,
      "video_dimensions": [1080, 1920],
      "fps": 60
    }
  }