{
  "trend_analyzer": {
    "name": "SimpleTrendAnalyzer",
    "params": {
      "music_folder": "./music_viral",
      "cache_dir": "trend_cache_viral",
      "region": "global",
      "hashtags": [
        "fyp", "foryou", "viral", "trending", "tiktok",
        "satisfying", "oddlysatisfying", "mesmerizing", "hypnotic", "perfect",
        "challenge", "test", "canyou", "focus", "impossible", "watchthis",
        "animation", "simulation", "geometry", "patterns", "circles", "spiral",
        "amazing", "mindblowing", "wait", "epic", "insane", "crazy",
        "2025", "trending2025", "viral2025", "new", "latest", "hot"
      ]
    }
  },
  "video_generator": {
    "name": "ViralTikTokGenerator",
    "params": {
      "width": 1080,
      "height": 1920,
      "fps": 60,
      "duration": 30.0
    }
  },
  "audio_generator": {
    "name": "SmoothAudioGenerator", 
    "params": {
      "style": "pop",
      "bpm": 120,
      "master_volume": 0.7
    }
  },
  "media_combiner": {
    "name": "FFmpegMediaCombiner",
    "params": {}
  },
  "publishers": {
    "tiktok": {
      "name": "TikTokPublisher",
      "params": {
        "auto_close": true,
        "headless": false
      },
      "enabled": true
    },
    "youtube": {
      "name": "YouTubePublisher",
      "params": {
        "auto_close": true,
        "headless": false
      },
      "enabled": true
    },
    "instagram": {
      "name": "InstagramPublisher",
      "params": {
        "auto_close": true,
        "mobile_emulation": true,
        "headless": false
      },
      "enabled": false
    }
  },

  "pipeline": {
    "name": "SimplePipeline",
    "params": {
      "output_dir": "videos_viral",
      "auto_publish": true,
      "video_duration": 30,
      "video_dimensions": [1080, 1920],
      "fps": 60
    }
  }
}